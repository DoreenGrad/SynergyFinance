<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray shadow. -->

    <item
        android:left="6dp"
        android:top="6dp">
        <shape>
            <solid android:color="@color/backgroundBlue30" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- White foreground. -->

    <item
        android:bottom="6dp"
        android:right="6dp">
        <shape>
            <solid android:color="@color/backgroundBlue100" />
            <corners android:radius="8dp" />
        </shape>

    </item>
</layer-list>